<UserControl x:Class="Uno.UI.Demo.Samples.ContentDialog"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:Uno.Playground.Samples"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d">

	<StackPanel>
		<Button x:Name="showDialog1"
				Click="ShowSignInDialog"
				Content="Show Sign In Dialog"
				VerticalAlignment="Top"
				Margin="10"/>

		<Button x:Name="showDialog2"
				Click="ShowRateAppDialog"
				Content="Show Rate App Dialog"
				VerticalAlignment="Top"
				Margin="10" />

		<Button x:Name="showDialog3"
				Click="ShowTermsDialog"
				Content="Terms and conditions"
				VerticalAlignment="Top"
				Margin="10" />
	</StackPanel>
</UserControl>
